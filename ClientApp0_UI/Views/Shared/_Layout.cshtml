<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-md-center">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ValaisBooking.ch </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Room" asp-action="Index">Search </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reservation" asp-action="Cancel">Cancel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Room" asp-action="ShowBasket">Basket</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About us</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>
    



    <div class="container">
        <p>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </p>
    </div>

    <footer class="border-top footer text-muted bg-dark text-center">
        &copy; 2020 - ValaisBooking.ch - Finding your dream room has never been so simple.
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
